<h1> Lista autorów </h1>
<div class="row">	
	<div class="col-md-8">
		<div class="panel panel-default">
			<div class="panel-heading">
				Liczba autorów: <%= @authors.count %>
				<%= link_to "Nowy autor" , new_author_path ,class: "label label-primary pull-right" if can? :create, Author %> 
			</div>
			<ul class="list-group">
				<%= render @authors %>
			</ul>
			<div class="panel-footer">
				<%= will_paginate @search.hits %>
			</div>
		</div>
	</div>
	<div class="col-md-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				Opcje
				<%= link_to "Mój profil" , current_user.author ,class:"pull-right" if user_signed_in? %>
			</div>
			<div class="panel-body">
			 	<%= render "shared/search_form" %>
			</div>
			<div class="panel-footer">
			</div>
		</div>
	</div>
</div>