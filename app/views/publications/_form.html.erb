<%= bootstrap_form_for(@publication) do |f| %>
  <%= f.text_field :title , required: true %>
  <%= f.text_field :description , required: true %>
  <%= f.select(:publication_subtype_id,options_for_select(@types), required: true ) %>

  <%= f.fields_for :authors do |a| %>
  	<%= a.select(:id,options_for_select(@authors,@selected),{},{multiple: true}) %>
  <% end %>

  <%= f.submit "Create Publication" %>
<% end %>
