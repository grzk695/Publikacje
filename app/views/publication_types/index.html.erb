<h1>Listing Publications Types</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Typ publikacji numer</th>
      <th>Nazwa</th>
      <th>Akcje</th>
    </tr>
  </thead>

  <tbody>
    <% @publication_types.each do |p| %>
      <tr>
        <td> <%=p.id%></td>
        <td> <%=p.name%></td>
        <td><%= link_to 'Show', publication_type_path(p) %>
        <%= link_to 'Edit', edit_publication_type_path(p) %>
        <%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
     <% end %>
  </tbody>
</table>

<br>

