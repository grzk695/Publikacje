<%= bootstrap_form_for(@publication_type) do |f| %>
  
  <%= f.text_field :name , label: "Nazwa" , required: true %>
  <%= f.fields_for :publication_attributes do |a| %>
  	<%= a.select(:id,options_for_select(@attrs,@selected),{label: "Atrybuty"},{multiple: true,:id=>"attributes"} )%>
  <% end %>  

  <%= f.submit "Zapisz" , class: "btn btn-primary" %>
<% end %>

<script>
$("#attributes").chosen({
	width:"100%",
	placeholder_text_multiple: "Wybierz atrybuty"
});
</script
