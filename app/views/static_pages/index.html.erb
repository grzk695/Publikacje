<div class="page-header"><h1>Aktualności</h1></div>
<div class="row">
	<div class="col-md-8">
		<% if @activities.any? %>
			<%= render_activities(@activities, layout: :activity)  %>
		<% else %>
			<div class="well well-lg">Brak wydarzeń.</div>
		<% end %>
		<%= will_paginate @activities, renderer: BootstrapPagination::Rails %>
	</div>

	<div class="col-md-4">
		<% if user_signed_in? %>
		<div class="panel panel-default">
			<div class="panel-heading">Opcje</div>
			<div class="panel-body">
				<%= link_to "Moje publikacje" , current_user.author %>
			</div>
		</div>
		<% end %>
	</div>
</div>