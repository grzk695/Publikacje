<header>
  <%= navbar fixed: :top, inverse:  true, responsive:  true do %>
    <%= navbar_collapse do %>
      <%= navbar_group align: 'right' do %>
        <%= navbar_item 'Home', root_path  %>
        <%= navbar_item "Publikacje", publications_path %>
        <% if user_signed_in? %>
          <%= render 'layouts/admin_menu' %>
          <%= navbar_item 'Edit profile', edit_user_registration_path %>
          <%= navbar_item 'Logout', destroy_user_session_path ,{},  {'data-method' => 'delete'} %>
        <% else %>
           <%= navbar_item "Sign up", new_user_registration_path %> 
           <%= navbar_item "Login", new_user_session_path %> 
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</header>


