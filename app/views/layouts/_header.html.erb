<header>
  <%= navbar fixed: :top, inverse:  true, responsive:  true do %>
    <%= navbar_collapse do %>
      <%= navbar_group align: 'right' do %>
        <%=navbar_item fa_icon("list", text: "Publikacje"), root_path  %>
        <% # navbar_item fa_icon("list", text: "Publikacje"), publications_path %>
        <%=navbar_item fa_icon("users", text: "Autorzy"), authors_path %>
        <% if user_signed_in? %>
          <%= render 'layouts/admin_menu' %>
          <%= navbar_item fa_icon("edit", text: "Edit profile"), edit_user_registration_path %>
          <%= navbar_item fa_icon("sign-out ", text: "Logout"), destroy_user_session_path ,{},  {'data-method' => 'delete'} %>
        <% else %>  
           <%= navbar_item fa_icon("arrow-circle-up", text: "Sign up"), new_user_registration_path %> 
           <%= navbar_item fa_icon("sign-in ", text: "Login"), new_user_session_path %> 
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</header>


